{
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "array-callback-return": [
            0
        ],
        "for-direction": [
            "error"
        ],
        "no-const-assign": [
            "error"
        ],
        "no-dupe-args": [
            "error"
        ],
        "no-dupe-else-if": [
            "error"
        ],
        "no-duplicate-imports": [
            "error"
        ],
        "no-ex-assign": [
            "error"
        ],
        "no-func-assign": [
            "error"
        ],
        "no-irregular-whitespace": [
            "error"
        ],
        "no-self-compare": [
            "error"
        ],
        "no-unexpected-multiline": [
            "error"
        ],
        "no-unreachable": [
            "error"
        ],
        "no-unreachable-loop": [
            "error"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-use-before-define": [
            "error"
        ],
        "use-isnan": [
            "error"
        ],
        "camelcase": [
            "error"
        ],
        "curly": [
            "error"
        ],
        "max-classes-per-file": [
            1
        ],
        "no-var": [
            "error"
        ],
        "prefer-const": [
            "error"
        ],
        "yoda": [
            "error"
        ],
	"semi": [
	    "error"
	]
    },
    "env": {
        "node": true
    }
}